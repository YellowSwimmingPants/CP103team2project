<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutTatal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="總分:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/totalPointsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/totalPoints"
            android:text="00"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/totalFouls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/totalPointsCount"
            android:text="累積犯規:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/totalFoulsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/totalFouls"
            android:text="00"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTatal"
        android:gravity="center">

        <TextView
            android:id="@+id/totalFreeThrowMade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罰球得分:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFreeThrowMadeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFieldGoalsMade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2分得分:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFieldGoalsMadeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalThreePointShotsMade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3分得分:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalThreePointShotsMadeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutInfo1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalFreeThrowLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罰球失手:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFreeThrowLostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFieldGoalsLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2分失手:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFieldGoalsLostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalThreePointShotsLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3分失手:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalThreePointShotsLostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutInfo2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalAssists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="助攻:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalAssistsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalSteals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抄截:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalStealsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalBlocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阻攻:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalBlocksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutInfo3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalOffensiveRebound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="進攻籃板:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalOffensiveReboundCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalDefensiveRebound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防守籃板:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalDefensiveReboundCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFoul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="犯規:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalFoulCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutInfo4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalTurnOvers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失誤:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalTurnOversCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>